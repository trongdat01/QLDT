<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/admin-grades.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>Thêm Điểm Mới - EDUMANAGER</title>
</head>

<body class="admin-body">
    <div class="admin-container">
        <!-- Include admin sidebar -->
        <%- include('../partials/admin-sidebar', { activeMenu: 'grades' }) %>

            <main class="admin-main">
                <!-- Include admin header -->
                <%- include('../partials/admin-header') %>

                    <div class="admin-content">
                        <div class="page-header">
                            <h1><i class="fas fa-plus-circle"></i> Thêm Điểm Mới</h1>
                            <nav class="breadcrumb">
                                <a href="/admin/dashboard">Admin</a> /
                                <a href="/admin/grades">Quản lý điểm</a> /
                                <span>Thêm điểm mới</span>
                            </nav>
                        </div>

                        <div class="admin-card">
                            <div class="admin-card-header">
                                <h3>Thông tin điểm sinh viên</h3>
                                <div class="card-actions">
                                    <button type="button" class="btn-sm secondary" id="calculate-grade">
                                        <i class="fas fa-calculator"></i> Tính điểm tổng kết
                                    </button>
                                </div>
                            </div>
                            <div class="admin-card-body">
                                <form id="gradeForm" class="grade-form" method="post" action="/admin/grades/create">
                                    <div class="form-row">
                                        <div class="form-group">
                                            <label for="courseId">Học phần <span class="required">*</span></label>
                                            <select id="courseId" name="courseId" required>
                                                <option value="">-- Chọn học phần --</option>
                                                <option value="COMP301">COMP301 - Cơ sở dữ liệu</option>
                                                <option value="COMP302">COMP302 - Mạng máy tính</option>
                                                <option value="COMP303">COMP303 - Lập trình web</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label for="semester">Học kỳ <span class="required">*</span></label>
                                            <select id="semester" name="semester" required>
                                                <option value="">-- Chọn học kỳ --</option>
                                                <option value="2023-1">Học kỳ 1 - 2023-2024</option>
                                                <option value="2022-2">Học kỳ 2 - 2022-2023</option>
                                                <option value="2022-1">Học kỳ 1 - 2022-2023</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label for="groupId">Nhóm <span class="required">*</span></label>
                                            <select id="groupId" name="groupId" required>
                                                <option value="">-- Chọn nhóm học phần --</option>
                                                <option value="1">Nhóm 1</option>
                                                <option value="2">Nhóm 2</option>
                                                <option value="3">Nhóm 3</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group student-search">
                                            <label for="studentSearch">Tìm sinh viên <span
                                                    class="required">*</span></label>
                                            <div class="search-input-group">
                                                <input type="text" id="studentSearch"
                                                    placeholder="Nhập MSSV hoặc tên sinh viên...">
                                                <button type="button" class="search-btn">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                            <div class="search-results" style="display: none;">
                                                <div class="search-result-item" data-id="20000123"
                                                    data-name="Nguyễn Văn A" data-class="CNTT-01">
                                                    <div class="result-info">
                                                        <span class="student-id">20000123</span>
                                                        <span class="student-name">Nguyễn Văn A</span>
                                                        <span class="student-class">CNTT-01</span>
                                                    </div>
                                                    <button type="button" class="select-btn">Chọn</button>
                                                </div>
                                                <div class="search-result-item" data-id="20000124"
                                                    data-name="Trần Thị B" data-class="CNTT-01">
                                                    <div class="result-info">
                                                        <span class="student-id">20000124</span>
                                                        <span class="student-name">Trần Thị B</span>
                                                        <span class="student-class">CNTT-01</span>
                                                    </div>
                                                    <button type="button" class="select-btn">Chọn</button>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="studentId">MSSV <span class="required">*</span></label>
                                            <input type="text" id="studentId" name="studentId" readonly required>
                                        </div>

                                        <div class="form-group">
                                            <label for="studentName">Tên sinh viên <span
                                                    class="required">*</span></label>
                                            <input type="text" id="studentName" name="studentName" readonly required>
                                        </div>

                                        <div class="form-group">
                                            <label for="className">Lớp <span class="required">*</span></label>
                                            <input type="text" id="className" name="className" readonly required>
                                        </div>
                                    </div>

                                    <div class="grade-components-section">
                                        <h3>Điểm thành phần</h3>

                                        <div class="form-row">
                                            <div class="form-group">
                                                <label for="attendanceGrade">Điểm chuyên cần (10%)</label>
                                                <input type="number" id="attendanceGrade" name="attendanceGrade" min="0"
                                                    max="10" step="0.1" class="grade-input">
                                            </div>

                                            <div class="form-group">
                                                <label for="assignmentGrade">Điểm bài tập (10%)</label>
                                                <input type="number" id="assignmentGrade" name="assignmentGrade" min="0"
                                                    max="10" step="0.1" class="grade-input">
                                            </div>

                                            <div class="form-group">
                                                <label for="midtermGrade">Điểm kiểm tra giữa kỳ (20%)</label>
                                                <input type="number" id="midtermGrade" name="midtermGrade" min="0"
                                                    max="10" step="0.1" class="grade-input">
                                            </div>

                                            <div class="form-group">
                                                <label for="finalGrade">Điểm thi cuối kỳ (60%)</label>
                                                <input type="number" id="finalGrade" name="finalGrade" min="0" max="10"
                                                    step="0.1" class="grade-input">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row result-row">
                                        <div class="form-group">
                                            <label for="totalGrade">Điểm tổng kết</label>
                                            <input type="number" id="totalGrade" name="totalGrade" min="0" max="10"
                                                step="0.1" readonly>
                                        </div>

                                        <div class="form-group">
                                            <label for="letterGrade">Điểm chữ</label>
                                            <input type="text" id="letterGrade" name="letterGrade" readonly>
                                        </div>

                                        <div class="form-group">
                                            <label for="status">Trạng thái</label>
                                            <select id="status" name="status">
                                                <option value="passed">Đạt</option>
                                                <option value="failed">Không đạt</option>
                                                <option value="incomplete">Chưa hoàn thành</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group full-width">
                                            <label for="notes">Ghi chú</label>
                                            <textarea id="notes" name="notes" rows="3"></textarea>
                                        </div>
                                    </div>

                                    <div class="form-actions">
                                        <button type="button" class="btn secondary"
                                            onclick="window.location.href='/admin/grades'">Hủy</button>
                                        <button type="submit" class="btn primary">Lưu điểm</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Include admin footer -->
                    <%- include('../partials/admin-footer') %>
            </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Student search functionality
            const studentSearch = document.getElementById('studentSearch');
            const searchResults = document.querySelector('.search-results');

            studentSearch.addEventListener('focus', function () {
                // In a real app, this would only show results when typing
                searchResults.style.display = 'block';
            });

            studentSearch.addEventListener('input', function () {
                // In a real app, this would filter results based on input
                if (this.value.trim() === '') {
                    searchResults.style.display = 'none';
                } else {
                    searchResults.style.display = 'block';
                }
            });

            document.addEventListener('click', function (e) {
                if (!studentSearch.contains(e.target) && !searchResults.contains(e.target)) {
                    searchResults.style.display = 'none';
                }
            });

            // Select student from search results
            const selectButtons = document.querySelectorAll('.select-btn');
            selectButtons.forEach(btn => {
                btn.addEventListener('click', function () {
                    const item = this.closest('.search-result-item');
                    const id = item.dataset.id;
                    const name = item.dataset.name;
                    const className = item.dataset.class;

                    document.getElementById('studentId').value = id;
                    document.getElementById('studentName').value = name;
                    document.getElementById('className').value = className;

                    studentSearch.value = name + ' (' + id + ')';
                    searchResults.style.display = 'none';
                });
            });

            // Calculate total grade and letter grade
            const calculateGrade = document.getElementById('calculate-grade');
            calculateGrade.addEventListener('click', function () {
                const attendance = parseFloat(document.getElementById('attendanceGrade').value) || 0;
                const assignment = parseFloat(document.getElementById('assignmentGrade').value) || 0;
                const midterm = parseFloat(document.getElementById('midtermGrade').value) || 0;
                const final = parseFloat(document.getElementById('finalGrade').value) || 0;

                const totalGrade = (attendance * 0.1) + (assignment * 0.1) + (midterm * 0.2) + (final * 0.6);
                document.getElementById('totalGrade').value = totalGrade.toFixed(1);

                // Determine letter grade
                let letterGrade;
                if (totalGrade >= 9.0) letterGrade = 'A+';
                else if (totalGrade >= 8.5) letterGrade = 'A';
                else if (totalGrade >= 8.0) letterGrade = 'A-';
                else if (totalGrade >= 7.0) letterGrade = 'B+';
                else if (totalGrade >= 6.5) letterGrade = 'B';
                else if (totalGrade >= 6.0) letterGrade = 'B-';
                else if (totalGrade >= 5.5) letterGrade = 'C+';
                else if (totalGrade >= 5.0) letterGrade = 'C';
                else if (totalGrade >= 4.0) letterGrade = 'D';
                else letterGrade = 'F';

                document.getElementById('letterGrade').value = letterGrade;

                // Update status based on grade
                const statusSelect = document.getElementById('status');
                if (totalGrade >= 4.0) {
                    statusSelect.value = 'passed';
                } else {
                    statusSelect.value = 'failed';
                }
            });

            // Auto-calculate grade when inputs change (optional)
            const gradeInputs = document.querySelectorAll('.grade-input');
            gradeInputs.forEach(input => {
                input.addEventListener('change', function () {
                    calculateGrade.click();
                });
            });

            // Form submission
            document.getElementById('gradeForm').addEventListener('submit', function (e) {
                e.preventDefault();

                // Validate required fields
                const requiredFields = this.querySelectorAll('[required]');
                let valid = true;

                requiredFields.forEach(field => {
                    if (field.value.trim() === '') {
                        valid = false;
                        field.classList.add('error');
                    } else {
                        field.classList.remove('error');
                    }
                });

                if (!valid) {
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                    return;
                }

                // In a real app, this would submit the form
                alert('Đã lưu điểm thành công!');

                // Redirect back to grades list
                // window.location.href = '/admin/grades';
            });
        });
    </script>
</body>

</html>