                        <div class="registration-actions">
                            <button class="btn secondary"><i class="fas fa-sync-alt"></i> Làm mới</button>
                            <button class="btn primary"><i class="fas fa-save"></i> Lưu đăng ký</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    // Tab switching functionality
                    const tabBtns = document.querySelectorAll('.tab-btn');

                    tabBtns.forEach(btn => {
                        btn.addEventListener('click', function () {
                            // Remove active class from all buttons
                            tabBtns.forEach(b => b.classList.remove('active'));

                            // Add active class to clicked button
                            this.classList.add('active');

                            // Get tab value
                            const tab = this.getAttribute('data-tab');

                            // Filter courses based on tab (in a real application)
                            // For this demo, we'll just alert
                            if (tab === 'registered') {
                                // Show only registered courses
                                alert('Hiển thị các học phần đã đăng ký');
                            } else if (tab === 'all') {
                                // Show all courses
                                alert('Hiển thị tất cả học phần');
                            } else {
                                alert('Đã chọn tab: ' + tab);
                            }
                        });
                    });
                });
            </script>
</body>

</html>