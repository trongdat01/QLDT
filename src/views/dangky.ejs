                                <select>
                                    <option value="">-- Khoa/Ngành --</option>
                                    <option value="cntt">Công nghệ thông tin</option>
                                    <option value="ktmt">Kỹ thuật máy tính</option>
                                    <option value="attt">An toàn thông tin</option>
                                    <option value="ktdl">Khoa học dữ liệu</option>
                                </select>
                                <select>
                                    <option value="">-- Học kỳ --</option>
                                    <option value="1-2023" selected>Học kỳ 1 - 2023-2024</option>
                                    <option value="2-2023">Học kỳ 2 - 2023-2024</option>
                                </select>
                            </div>
                        </div>

                        <div class="course-tabs">
