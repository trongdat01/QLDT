            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    // Toggle between week and list views
                    const viewBtns = document.querySelectorAll('.view-btn');
                    const weeklySchedule = document.querySelector('.weekly-schedule');
                    const listSchedule = document.querySelector('.list-schedule');

                    viewBtns.forEach(btn => {
                        btn.addEventListener('click', function () {
                            viewBtns.forEach(b => b.classList.remove('active'));
                            this.classList.add('active');

                            const view = this.getAttribute('data-view');
                            if (view === 'week') {
                                weeklySchedule.style.display = 'block';
                                listSchedule.style.display = 'none';
                            } else {
                                weeklySchedule.style.display = 'none';
                                listSchedule.style.display = 'block';
                            }
                        });
                    });

                    // Navigation buttons
                    document.getElementById('prev-week').addEventListener('click', function () {
                        alert('Đã chuyển đến tuần trước');
                        // In a real application, this would load the previous week's schedule
                    });

                    document.getElementById('next-week').addEventListener('click', function () {
                        alert('Đã chuyển đến tuần sau');
                        // In a real application, this would load the next week's schedule
                    });

                    document.getElementById('current-week').addEventListener('click', function () {
                        alert('Đã chuyển đến tuần hiện tại');
                        // In a real application, this would load the current week's schedule
                    });

                    // Filters
                    document.getElementById('semester-select').addEventListener('change', function () {
                        alert('Đã chọn ' + this.options[this.selectedIndex].text);
                        // In a real application, this would filter the schedule by semester
                    });

                    document.getElementById('week-select').addEventListener('change', function () {
                        alert('Đã chọn ' + this.options[this.selectedIndex].text);
                        // In a real application, this would change to the selected week
                    });

                    document.getElementById('course-select').addEventListener('change', function () {
                        alert('Đã chọn ' + this.options[this.selectedIndex].text);
                        // In a real application, this would filter by the selected course
                    });

                    document.getElementById('date-picker').addEventListener('change', function () {
                        alert('Đã chọn ngày: ' + this.value);
                        // In a real application, this would show the schedule for the selected date
                    });
                });
            </script>
